{{- /*gotype: github.com/xujiahua/alertmanager-webhook-feishu/model.WebhookMessage*/ -}}
{
"msg_type": "interactive",
"card":
{
"header": {
"title": {
"tag": "plain_text",
"content": "{{if in .GroupLabels "alertname"}}{{.GroupLabels.alertname}}{{else}}no_alertname{{end}} {{if len .FiringAlerts}}[{{len .FiringAlerts}}] Firing{{end}} {{if len .ResolvedAlerts}}[{{len .ResolvedAlerts}}] Resolved{{end}}"
},
"template":"{{if len .FiringAlerts}}red{{else}}green{{end}}"
},

"elements": [
{{if .FiringAlerts}}
    {
    "tag": "div",
    "text": {
    "tag": "lark_md",
    "content": "**FiringAlerts**"
    }
    },
    {
    "tag": "hr"
    },
{{end}}
{{range .FiringAlerts}}
    {
    "tag": "div",
    "text": {
    "tag": "lark_md",
    "content": "{{.}}"
    }
    },
    {
    "tag": "hr"
    },
{{ end }}
{{if .ResolvedAlerts}}
    {
    "tag": "div",
    "text": {
    "tag": "lark_md",
    "content": "**ResolvedAlerts**"
    }
    },
    {
    "tag": "hr"
    },
{{end}}
{{ range .ResolvedAlerts }}
    {
    "tag": "div",
    "text": {
    "tag": "lark_md",
    "content": "{{.}}"
    }
    },
    {
    "tag": "hr"
    },
{{ end }}
{
"tag": "note",
"elements": [
{
"tag": "lark_md",
"content": "{{range .OpenIDs}}
<at id={{.}}></at>{{end}}"
}
]
}
]
}
}
